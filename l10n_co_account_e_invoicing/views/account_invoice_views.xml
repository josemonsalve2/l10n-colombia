<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="l10n_co_account_invoice_discrepancy_response.invoice_form"/>
        <field name="arch" type="xml">
            <button name="%(account.action_account_invoice_refund)d" position="attributes">
                <attribute name="groups">l10n_co_account_e_invoicing.group_view_invoice_refund_buttons</attribute>
            </button>

            <button name="%(l10n_co_account_invoice_discrepancy_response.account_invoice_debit_note_action)d" position="attributes">
                <attribute name="groups">l10n_co_account_e_invoicing.group_view_invoice_refund_buttons</attribute>
            </button>
        </field>
    </record>

    <record id="view_invoice_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_outstanding']" position="after">
                <field name="warn_remaining_certificate" invisible="1"/>
                <field name="warn_inactive_certificate" invisible="1"/>
                <div class="alert alert-error" role="alert" style="margin-bottom:0px; background-color:#ff9e9e;"
                    attrs="{'invisible': [('warn_remaining_certificate', '!=', True)]}">
                    The certificate for this company is nearby to expire.<br/>
                    <span style="font-weight:bold;">Please, you must to inform the administration.</span>
                </div>
                <div class="alert alert-error" role="alert" style="margin-bottom:0px; background-color:#ff9e9e;"
                    attrs="{'invisible': [('warn_inactive_certificate', '!=', True)]}">
                    There is no an active certificate.<br/>
                    <span style="font-weight:bold;">Please, you must to inform the administration.</span>
                </div>
            </xpath>

            <xpath expr="//field[@name='date_invoice']" position="after">
                <field name="sequence_resolution_id" invisible="1"/>
                <field name="invoice_datetime" readonly="1"/>
                <field name="send_invoice_to_dian"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_send_invoice_dian_field"/>
                <field name="operation_type"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_view_operation_type_field"/>
                <field name="invoice_type_code"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_view_invoice_type_field"/>
            </xpath>

            <xpath expr="//page[@name='other_info']//field[@name='name']" position="after">
                <field name="receipt_document_reference"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page name="dian_documents"
                    string="DIAN Documents"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_view_dian_documents">
                    <group>
                        <group>
                            <label for="dian_document_state"/>
                            <div>
                                <field name="dian_document_state"/>
                                <button name="action_ApplicationResponse_034"
                                    string="Tacit Acceptance"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-check"
                                    attrs="{'invisible': [('dian_document_state', '!=', 'as_receipt')]}"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <field name="dian_document_ids" widget="section_and_note_one2many" mode="tree,kanban">
                            <tree>
                                <button type="object" name="go_to_dian_document" string="DIAN Document"/>
                                <field name="cufe_cude"/>
                                <field name="create_date"/>
                                <field name="zipped_filename"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="sale.account_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="delivery_datetime"/>
            </xpath>
        </field>
    </record>

    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='has_outstanding']" position="after">
                <field name="warn_remaining_certificate" invisible="1"/>
                <field name="warn_inactive_certificate" invisible="1"/>
                <div class="alert alert-error" role="alert" style="margin-bottom:0px; background-color:#ff9e9e;"
                    attrs="{'invisible': [('warn_remaining_certificate', '!=', True)]}">
                    The certificate for this company is nearby to expire.<br/>
                    <span style="font-weight:bold;">Please, you must to inform the administration.</span>
                </div>
                <div class="alert alert-error" role="alert" style="margin-bottom:0px; background-color:#ff9e9e;"
                    attrs="{'invisible': [('warn_inactive_certificate', '!=', True)]}">
                    There is no an active certificate.<br/>
                    <span style="font-weight:bold;">Please, you must to inform the administration.</span>
                </div>
            </xpath>

            <xpath expr="//field[@name='date_invoice']" position="after">
                <field name="sequence_resolution_id" invisible="1"/>
                <field name="invoice_datetime" readonly="1"/>
                <field name="send_invoice_to_dian"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_send_invoice_dian_field"/>
                <field name="operation_type"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_view_operation_type_field"/>
                <field name="invoice_type_code"
                    required="1"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False)]}"
                    groups="l10n_co_account_e_invoicing.group_view_invoice_type_field"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page name="dian_documents"
                    string="DIAN Documents"
                    attrs="{'invisible': [('sequence_resolution_id', '=', False), ('type', '=', 'in_refund')]}"
                    groups="l10n_co_account_e_invoicing.group_view_dian_documents">
                    <group attrs="{'invisible': [('sequence_resolution_id', '!=', False)]}">
                        <group>
                            <field name="supplier_uuid" attrs="{'invisible': [('reference', '=', False)]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible': [('sequence_resolution_id', '!=', False)]}">
                        <group>
                            <label for="dian_document_state"/>
                            <div>
                                <field name="dian_document_state" readonly="1"/>
                                <button name="action_ApplicationResponse_030"
                                    string="E-invoice Receipt"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-check"
                                    attrs="{'invisible': ['|', ('supplier_uuid', '=', False), ('dian_document_state', '!=', False)]}"/>
                                <button name="action_ApplicationResponse_031"
                                    string="E-invoice Claim"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-times"
                                    attrs="{'invisible': [('dian_document_state', '!=', 'as_receipt')]}"/>
                                <button name="action_ApplicationResponse_032"
                                    string="Assets and/or Services Receipt"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-check"
                                    attrs="{'invisible': [('dian_document_state', '!=', 'e-invocie_receipt')]}"/>
                                <button name="action_ApplicationResponse_033"
                                    string="Express Acceptance"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-check"
                                    attrs="{'invisible': [('dian_document_state', '!=', 'as_receipt')]}"/>
                            </div>
                        </group>
                        <group>
                            <field name="dian_claim"
                                attrs="{
                                    'invisible': [('dian_document_state', 'not in', ('as_receipt', 'e-invocie_claim'))],
                                    'readonly': [('dian_document_state', '=', 'e-invocie_claim')]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="dian_document_ids" widget="section_and_note_one2many" mode="tree,kanban">
                            <tree>
                                <button type="object" name="go_to_dian_document" string="DIAN Document"/>
                                <field name="cufe_cude"/>
                                <field name="create_date"/>
                                <field name="zipped_filename"/>
                                <field name="application_response_type"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
