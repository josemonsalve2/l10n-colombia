<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="notification_group_view_form" model="ir.ui.view">
        <field name="model">einvoice.notification.group</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="email" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="notification_group_view_tree" model="ir.ui.view">
        <field name="model">einvoice.notification.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="email" />
            </tree>
        </field>
    </record>

    <record id="notification_group_action" model="ir.actions.act_window">
        <field name="name">Notification Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">einvoice.notification.group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="notification_group_menu" name="Notification Group" action="notification_group_action" parent="account.menu_finance_receivables" groups="l10n_co_account_e_invoicing.group_view_dian_documents" sequence="3"/>

</odoo>
